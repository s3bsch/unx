# ~/.bash_aliases: executed by ~/.bashrc.
# skeleton for my personal aliases and variables

#
# aliases
#

# navigation
alias ..='cd ..'
alias cd..='cd ..'
alias dbx='cd $dbx'
alias docs='cd ~/docs'
alias down='cd ~/down'

# general
# general section

# ssh
# ssh alias section

# system
alias hbn='sudo pm-hibernate'
alias lck='gnome-screensaver-command --lock'			# locks desktop

#
# variables
#

dbx="$HOME/misc/Dropbox"
docs="$HOME/docs"
down="$HOME/down"

